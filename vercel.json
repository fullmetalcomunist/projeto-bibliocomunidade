{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/simple-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/web/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/simple-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/web/$1"
    }
  ]
}
